<!doctype html> <!-- Game.html -->

<html><head><meta charset="utf-8"/><meta name="viewport"content="width=device-width,initial-scale=1"/>

<title>폼 과제</title>

<script>
function genre(obj) {
var movie_a = ["메이플스토리", "던파", "로스트아크", "리니지"];
var movie_b =  ["롤", "사이퍼즈", "히오스", "도타2"];
var movie_c = ["서든어택", "스페셜포스2", "아바", "건즈"];
var movie_d =  ["프리스타일", "피파 온라인", "테일즈러너", "마구마구"];
var target = document.getElementById("moviex");
 if(obj.value == "a") var k = movie_a;
else if(obj.value == "b") var k = movie_b;
else if(obj.value == "c") var k = movie_c;
else if(obj.value == "d") var k = movie_d;
target.options.length = 0;
for (x in k) {
var opt = document.createElement("option");
opt.value = k[x];
opt.innerHTML = k[x];
target.appendChild(opt);
    }
    }
</script>

</head>
<body>
<section>
<fieldset>
<legend>Game</legend>
<label for="genrex">장르</label>
<select id="genrex" name="moviegenre" onchange ="genre(this)">
<option value="a"selected>Rpg</option>
<option value="b">Aos</option>
<option value="c">Fps</option>
<option value="d">Sports game</option></select>
<label for="movie">이름</label>
<select id="moviex" name="movie"></select>
</fieldset>
</section>
</body>
</html>
